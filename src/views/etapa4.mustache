{{>partials/header}}
<div class="form">
    <form action="/etapa4" method="POST">

        <h4>ALTERAÇÕES E LESÕES DOS PÉS</h4>
        <div class="row justify-content-center">
            <p>Tipo de pisada</p>
            <div class="col-md-2">
                <img src="images/pe_cavo.png" alt="">
                <input type="checkbox" name="tipo_pisada[]" value="cavo"> Cavo
            </div>

            <div class="col-md-2">
                <img src="images/pe_chato.png" alt="">
                <input type="checkbox" name="tipo_pisada[]" value="chato"> Chato
            </div>

            <div class="col-md-2">
                <img src="images/pe_normal.png" alt="">
                <input type="checkbox" name="tipo_pisada[]" value="normal"> Normal
            </div>
            <hr>
            <div class="row">
                <!-- Flexível -->
                <div class="col">
                    <div class="card p-3">
                        <div class="card-title">Flexível</div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="flexivel[]" value="D" id="flexivelD">
                            <label class="form-check-label" for="flexivelD">D</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="flexivel[]" value="E" id="flexivelE">
                            <label class="form-check-label" for="flexivelE">E</label>
                        </div>
                    </div>
                </div>

                <!-- Rígido -->
                <div class="col">
                    <div class="card p-3">
                        <div class="card-title">Rígido</div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="rigido[]" value="D" id="rigidoD">
                            <label class="form-check-label" for="rigidoD">D</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="rigido[]" value="E" id="rigidoE">
                            <label class="form-check-label" for="rigidoE">E</label>
                        </div>
                    </div>
                </div>

                <!-- Espalmado -->
                <div class="col">
                    <div class="card p-3">
                        <div class="card-title">Espalmado</div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="espalmado[]" value="D" id="espalmadoD">
                            <label class="form-check-label" for="espalmadoD">D</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="espalmado[]" value="E" id="espalmadoE">
                            <label class="form-check-label" for="espalmadoE">E</label>
                        </div>
                    </div>
                </div>

                <!-- Martelo -->
                <div class="col">
                    <div class="card p-3">
                        <div class="card-title">Martelo</div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="martelo[]" value="D" id="marteloD">
                            <label class="form-check-label" for="marteloD">D</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="martelo[]" value="E" id="marteloE">
                            <label class="form-check-label" for="marteloE">E</label>
                        </div>
                    </div>
                </div>

                <!-- Queda de Metatarso -->
                <div class="col">
                    <div class="card p-3">
                        <div class="card-title">Queda de Metatarso</div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="queda_metatarso[]" value="D" id="quedaD">
                            <label class="form-check-label" for="quedaD">D</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="queda_metatarso[]" value="E" id="quedaE">
                            <label class="form-check-label" for="quedaE">E</label>
                        </div>
                    </div>
                </div>
            </div>
            <hr>
            <div class="container justify-content-center">
                <div class="row">
                    <div class="col-md-3">
                        <p>Tipo de Marcha</p>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" name="tipo_marcha[]" value="normal" id="flexCheckNormal">
                            <label class="form-check-label" for="flexCheckNormal">
                                Normal
                            </label>
                        </div>

                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" name="tipo_marcha[]" value="patologica" id="flexCheckPatologica">
                            <label class="form-check-label" for="flexCheckPatologica">
                                Patológica
                            </label>
                        </div>

                        <label for="inputText">Qual?</label>
                        <input type="text" id="inputText" name="qual_marcha">
                    </div>

                    <div class="col-md-3">
                        <p>Joelho</p>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" name="joelho[]" value="normal" id="flexCheckJoelhoNormal">
                            <label class="form-check-label" for="flexCheckJoelhoNormal">
                                Normal
                            </label>
                        </div>

                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" name="joelho[]" value="valgo" id="flexCheckJoelhoValgo">
                            <label class="form-check-label" for="flexCheckJoelhoValgo">
                                Valgo
                            </label>
                        </div>

                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" name="joelho[]" value="varo" id="flexCheckJoelhoVaro">
                            <label class="form-check-label" for="flexCheckJoelhoVaro">
                                Varo
                            </label>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <p>Articulação</p>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" name="articulacao[]" value="retropé" id="flexCheckRetrope">
                            <label class="form-check-label" for="flexCheckRetrope">
                                Retropé
                            </label>
                        </div>

                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" name="articulacao[]" value="chopart" id="flexCheckChopart">
                            <label class="form-check-label" for="flexCheckChopart">
                                Chopart
                            </label>
                        </div>

                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" name="articulacao[]" value="mediopé" id="flexCheckMediopé">
                            <label class="form-check-label" for="flexCheckMediopé">
                                Mediopé
                            </label>
                        </div>

                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" name="articulacao[]" value="lisfranc" id="flexCheckLisfranc">
                            <label class="form-check-label" for="flexCheckLisfranc">
                                Lisfranc
                            </label>
                        </div>

                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" name="articulacao[]" value="antepé" id="flexCheckAntepé">
                            <label class="form-check-label" for="flexCheckAntepé">
                                Antepé
                            </label>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <p>Sensibilidade a dor</p>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" name="sensibilidade[]" value="diminuida" id="flexCheckDiminuida">
                            <label class="form-check-label" for="flexCheckDiminuida">
                                Diminuída
                            </label>
                        </div>

                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" name="sensibilidade[]" value="normal" id="flexCheckNormalSens">
                            <label class="form-check-label" for="flexCheckNormalSens">
                                Normal
                            </label>
                        </div>

                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" name="sensibilidade[]" value="aumentada" id="flexCheckAumentada">
                            <label class="form-check-label" for="flexCheckAumentada">
                                Aumentada
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <button type="submit">Próximo</button>
    </form>
</div>
{{>partials/footer}}
